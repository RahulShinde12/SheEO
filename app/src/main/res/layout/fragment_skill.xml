<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SkillFrag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/cart"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/searchView"
                    android:layout_width="30dp"
                    android:src="@drawable/baseline_post_add_24"
                    android:layout_height="30dp">

                </ImageView>

                <TextView
                    android:id="@+id/searchView"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enrolled Courses"
                    android:fontFamily="@font/roboto_medium"/>


<!--                <androidx.appcompat.widget.SearchView-->
<!--                    android:id="@+id/searchView"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="70dp"-->
<!--                    android:layout_marginLeft="10dp"-->
<!--                    android:layout_marginTop="15dp"-->
<!--                    android:layout_marginRight="10dp"-->
<!--                    android:background="@drawable/searchboxbg"-->

<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:iconifiedByDefault="false"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    app:layout_constraintTop_toTopOf="parent"-->
<!--                    app:queryHint="Search lead..." />-->


            </LinearLayout>



            <!-- activity_main.xml -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>


            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:text="Certification Program"
                    android:layout_height="wrap_content">

                </TextView>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/newgroupsrecycler2"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:text="Online Courses"
                    android:layout_height="wrap_content">

                </TextView>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/popularnow"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Take skill Assessment"
                android:textAlignment="center"
                android:textSize="20dp"
                android:id="@+id/takeassessment"
                android:background="@drawable/button_round_bg"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_margin="20dp"/>



        </LinearLayout>


    </ScrollView>

</FrameLayout>