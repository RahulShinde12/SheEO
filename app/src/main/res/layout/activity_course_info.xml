<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout



                android:orientation="vertical"

                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:src="@drawable/back"
                        android:layout_height="wrap_content">

                    </ImageView>

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:text="Event"
                        android:textStyle="bold"
                        android:textSize="20dp"/>


                </LinearLayout>



                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/devents"
                    android:src="@drawable/img"

                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical"
                    android:layout_marginEnd="20dp">





                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="Java Business Develpment course"
                        android:textColor="@color/black"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#eef3f7"/>




                    <LinearLayout
                        android:layout_marginTop="15dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:background="@drawable/devents"
                            android:src="@drawable/baseline_star_24"

                            />

                        <LinearLayout
                            android:layout_marginStart="20dp"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textStyle="bold"
                                android:textSize="16dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="4.5 Reviwes(30)"/>




                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Docker and kubernates Basic to Advance offline training"
                        android:textSize="16dp"
                        android:fontFamily="@font/jacques_francois"
                        android:layout_marginTop="30dp"
                        android:textStyle="bold"

                        />


                    <LinearLayout
                        android:layout_marginTop="20dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:background="@drawable/devents"
                            android:src="@drawable/baseline_currency_rupee_24"

                            />

                        <LinearLayout
                            android:layout_marginStart="20dp"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textStyle="bold"
                                android:textSize="16dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="20% off"/>

                            <TextView
                                android:id="@+id/price"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="1999 RS"/>



                        </LinearLayout>


                    </LinearLayout>





                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Prereqvisite"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_marginTop="30dp"
                        >

                    </TextView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="This course provides a comprehensive introduction to the fundamentals of web development. From building simple static websites to dynamic web applications, you'll learn essential technologies and concepts that form the backbone of modern web development. Through hands-on projects and practical exercises, you'll gain the skills and confidence to create your own web projects from scratch."
                        android:textSize="14dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="&#8226; Basic understanding of computers and the internet.\n&#8226; Familiarity with HTML, CSS, and JavaScript is helpful but not required.\n&#8226; Eagerness to learn and explore new concepts in web development."
                        android:layout_marginTop="10dp"
                        />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OutComes"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_marginTop="30dp"
                        >

                    </TextView>



                    <TextView
                        android:fontFamily="@font/poppins"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="These learning outcomes provide a clear understanding of the skills and knowledge students will acquire upon completing the course. Adjustments can be made based on the specific objectives and target audience of the course."
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="&#8226; Solid Foundation in Web Technologies:\n&#8226; Ability to Build Responsive Websites:\n&#8226; Problem-Solving Skills:"
                        android:layout_marginTop="10dp"
                        />


                </LinearLayout>



                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:gravity="end"
                    android:layout_marginEnd="20dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_gravity="right"
                        android:id="@+id/enroll"
                        android:layout_width="match_parent"
                        android:layout_margin="20dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Entoll Now"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:background="@drawable/button_round_bg"
                        />



                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>




</ScrollView>